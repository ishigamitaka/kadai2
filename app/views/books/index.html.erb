<body>
<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>本のタイトル</th>
        <th>感想</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy",destroy_book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form">
  <h1>New book</h1>

  <%= form_with model: @book, url: 'books', method: :post do |f| %>
    <div class="field">
      <label>本のタイトル</label>
      <%= f.text_field :title %>
	  </div>
	  <div class="field">
      <label>感想</label>
      <%= f.text_area :body %>
    </div
	</div>
	<div class="submit">
    <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</body>